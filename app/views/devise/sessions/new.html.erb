<div class="container my-5">
  <div class="account-title d-flex align-items-center justify-content-center my-4">
    <h2>Log in</h2>
  </div>
  <div class="form-account">
    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), html: { method: :post, data: { turbo: false } }) do |f| %>

      <% if @user.errors.any? %>
        <div class="error-message">
          <%= @user.errors.full_messages.to_sentence.capitalize %>
        </div>
      <% end %>

      <div class="form-inputs">
        <%= f.input :email,
                    label: "Your email",
                    required: false,
                    autofocus: true,
                    input_html: { autocomplete: "email" } %>
        <%= f.input :password,
                    label: "Your password",
                    required: false,
                    input_html: { autocomplete: "current-password" } %>
        <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
      </div>

      <div class="form-actions my-3">
        <%= f.button :submit, "Log in", class: "btn btn-outline-light" %>
      </div>
    <% end %>
  </div>
</div>

