<div class="container m-auto p-5">
  <div class="row d-flex align-items-center justify-content-center">
    <div class="col-md-7">
    <div class="card-profile p-3">
      <div class="text-center mt-3">
        <div class="profile-title">
          <span class="p-3 rounded fs-4">Log in</span>
        </div>
      </div>
      <div class="form-account">
        <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), html: { method: :post, data: { turbo: false }, id:'session_user' }) do |f| %>
          <% if @user.errors.any? %>
            <div class="error-message">
              <%= @user.errors.full_messages.to_sentence.capitalize %>
            </div>
          <% end %>
          <div class="form-inputs">
            <%= f.input :email,
                          label: "Your email",
                          required: false,
                          autofocus: true,
                          input_html: { autocomplete: "email" } %>
            <%= f.input :password,
                          label: "Your password",
                          required: false,
                          input_html: { autocomplete: "current-password" } %>
            <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
          </div>
          <div class="form-actions my-3">
            <%= f.button :submit, "Log in", class: "btn btn-outline-light" %>
          </div>
        <% end %>
      </div>
    </div>
    </div>
  </div>
</div>