<div id="lesson">
  <div class="row gx-4 gx-lg-5 py-4">
    <div class="d-flex justify-content-center">
      <h1 class="fs-1 fw-bolder"><%= @lesson.title.upcase %></h1>
    </div >
    <div class="d-flex justify-content-center">
      <h4 class="fw-bold fs-3"><%= @lesson.category %></h4>
      <% if @lesson.liked?(current_user.client) %>
        <%= button_to like_path(@lesson), class:'btn-like', method: :post, disabled: true do %>
          <svg xmlns="http://www.w3.org/2000/svg" width="25" height="25" fill="red" class="bi bi-heart-fill" viewBox="0 0 16 16">
            <path fill-rule="evenodd" d="M8 1.314C12.438-3.248 23.534 4.735 8 15-7.534 4.736 3.562-3.248 8 1.314z"/>
          </svg>
        <% end %>
      <% else %>
        <%= button_to like_path(@lesson), class:'btn btn-like', method: :post do %>
          <svg xmlns="http://www.w3.org/2000/svg" width="25" height="25" fill="white" class="bi bi-heart-fill" viewBox="0 0 16 16">
            <path fill-rule="evenodd" d="M8 1.314C12.438-3.248 23.534 4.735 8 15-7.534 4.736 3.562-3.248 8 1.314z"/>
          </svg>
        <% end %>
      <% end %>
    </div>
    <div class="d-flex justify-content-around fs-4 my-5">
      <span><%= humanized_money_with_symbol(@lesson.price) %></span>
      <span><%= @lesson.duration %> min</span>
      <span>Level <%= @lesson.level %></span>
    </div>
    <div class="d-flex justify-content-center">
      <p class="lead"><%= @lesson.description %></p>
    </div>
  </div>
</div>
