<div class="container py-5">
  <div class="row justify-content-center">
    <div class="col-md-8 col-lg-6 col-xl-4">
      <div id="schedule">
        <div class="card-image">
        <%= image_tag("trainer-default.jpeg", width: '100%') %>
        <h1 class="schedule-time"><%= @schedule.start_time.strftime('%d/%m %H:%M') %></h1>
        </div>
        <div class="card-body">
          <div class="text-center">
            <h5 class="card-title"><%= @schedule.lesson.title.upcase %></h5>
            <p class="text-muted mb-4"><%= @schedule.trainer.name %></p>
            <p class="lead"><%= @schedule.lesson.description %></p>
          </div>
          <div>
            <div class="d-flex justify-content-between">
              <span>Level</span><span><%= @schedule.lesson.level %></span>
            </div>
            <div class="d-flex justify-content-between">
              <span>Duration</span><span><%= @schedule.lesson.duration %>min</span>
            </div>
            <div class="d-flex justify-content-between">
              <span>Cost</span><span><%= humanized_money_with_symbol(@schedule.lesson.price) %></span>
            </div>
          </div>
          <div class="d-flex justify-content-between total font-weight-bold mt-4">
            <div class="booking">
              <div class="mx-4">    
                <% if @booking.nil? %>
                  <%= button_to 'Book', bookings_path, params:{booking: {schedule_id: @schedule.id, trainer_id: @schedule.trainer.id, lesson_id: @schedule.lesson.id, client_id: current_user.client.id}}, class:"btn btn-danger", method: :post  %>
                <% else %>
                  <%= button_to 'Cancel', booking_path(@booking), class:"btn btn-outline-danger", method: :delete  %>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
