<header class="py-5 bg-image-full" style="background-image: url('https://source.unsplash.com/wfh8dDlNFOk/1600x900')">
 <div class="text-center my-5">
  <!--                <img class="img-fluid rounded-circle mb-4" src="https://dummyimage.com/150x150/6c757d/dee2e6.jpg" alt="..." /> -->
  <h1 class="text-white fs-3 fw-bolder"><%= @schedule.lesson.title %></h1>
  <p class="text-white-50 mb-0"><%= @schedule.lesson.category %></p>
</div>
</header>
<section class="py-5">
 <div class="container my-5">
   <div class="row justify-content-center">
     <div class="col-lg-6">
       <h2>Description</h2>
       <p class="lead"><%= @schedule.lesson.description %></p>
       <p class="mb-0"><%= @schedule.lesson.level %></p>
       <p class="mb-0">Duration: <%= @schedule.lesson.duration %>min</p>

       <p class="mb-0"><%= @schedule.lesson.cost %></p>
       <div class="booking">
         <%= simple_form_for [@schedule, Booking.new], html: { turbo: false } do |f| %>
           <%= f.input :lesson_id, as: :hidden, value: @schedule.lesson.id %>
           <%= f.input :trainer_id, as: :hidden, value: @schedule.trainer.id %>
           <%= f.input :start, as: :hidden, value: @schedule.start_time %>
           <%= f.submit 'Book this class', class:"btn btn-outline-light mt-4" %>
         <% end %>
         <!--    <%= turbo_frame_tag "bookings" do %>
             <%= render @bookings, schedule: @schedule %>
             <% end %> -->
        </div>
      </div>
    </div>
  </div>
</section>
