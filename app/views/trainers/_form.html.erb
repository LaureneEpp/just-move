<div class="container">
  <div class="form-profile">
    <%= simple_form_for @trainer, html: { class: "trainer form" } do |f| %>
    <div class="form-inputs">
      <%= f.input :user_id, as: :hidden, value: current_user.id %>
      <%= f.input :first_name, required: true, autofocus: true %>
      <%= f.input :last_name, required: true, autofocus: true %>
      <%= f.input :phone, required: false, autofocus: true %>
      <%= f.input :bio, required: false, autofocus: true %>
      <%= f.input :experience, required: false, autofocus: true %>
    </div>
    <div class="form-actions">
      <%= f.button :submit, class:"btn btn-outline-light mt-4" %>
    </div>
    <% end %>
  </div>
</div>
