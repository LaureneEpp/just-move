<%= turbo_frame_tag "list_bookings" do %>
<div id="bookings-index">
  <div class="container my-3 py-3">
    <h5 class="fs-3 fw-semibold text-dark mt-3">Booking for your class</h5>
    <table class="table table-striped table-hover">
      <thead>
        <tr>
          <th scope="col">Date</th>
          <th scope="col">Category</th>
          <th scope="col">Clients</th>
          <th scope="col">Status</th>
          <th scope="col">Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @trainer_bookings.each do |booking| %>
        <tr>
          <td><%= booking.schedule.start_time.strftime("%d/%m") %></td>
          <td><%= booking.lesson.category %></td>
          <td><%= booking.client.name %></td>
          <td><%= booking.status %></td>
          <td class="d-flex">
            <%= button_to validate_booking_booking_path(booking), class:"btn btn-review", method: :patch do %>
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="green" class="bi bi-check-lg" viewBox="0 0 16 16">
              <path d="M12.736 3.97a.733.733 0 0 1 1.047 0c.286.289.29.756.01 1.05L7.88 12.01a.733.733 0 0 1-1.065.02L3.217 8.384a.757.757 0 0 1 0-1.06.733.733 0 0 1 1.047 0l3.052 3.093 5.4-6.425a.247.247 0 0 1 .02-.022Z" />
            </svg>
            <% end %>
            <%= button_to reject_booking_booking_path(booking), class:"btn btn-review", method: :patch do %>
              <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="red" class="bi bi-x-lg" viewBox="0 0 16 16">
                <path d="M2.146 2.854a.5.5 0 1 1 .708-.708L8 7.293l5.146-5.147a.5.5 0 0 1 .708.708L8.707 8l5.147 5.146a.5.5 0 0 1-.708.708L8 8.707l-5.146 5.147a.5.5 0 0 1-.708-.708L7.293 8 2.146 2.854Z" />
              </svg>
            <% end %>
          </td>
        </tr>
        <% end -%>
      </tbody>
    </table>
  </div>
</div>
<% end -%>
